# PostgreSQL Database
# DB_HOST/DATABASE_URL: "db" is the Docker service name (for full Docker deployment)
# For local dev (hybrid workflow), set DB_HOST=localhost in backend/.env
DB_USER=postgres
DB_PASSWORD=mysecretpassword
DB_NAME=crescebr
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://postgres:mysecretpassword@db:5432/crescebr

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Server Configuration
NODE_ENV=development
PORT=3001

# API Keys
CNPJ_API_KEY=your-cnpj-api-key-if-needed

# Frontend Configuration
VITE_API_URL=http://localhost:3001/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (if needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password

# Security
BCRYPT_SALT_ROUNDS=10