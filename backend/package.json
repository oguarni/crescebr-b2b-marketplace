{
  "name": "@crescebr/backend",
  "version": "1.0.0",
  "type": "module",
  "description": "CresceBR B2B Marketplace Backend API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all && nodemon src/server.ts",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext ts,js --report-unused-disable-directives",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "db:create": "sequelize-cli db:create",
    "db:drop": "sequelize-cli db:drop"
  },
  "keywords": [
    "api",
    "backend",
    "express",
    "nodejs",
    "typescript",
    "b2b",
    "marketplace"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "express": "^5.1.0",
    "express-validator": "^6.14.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "tsx": "^4.20.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.7",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "dotenv": "^17.0.1",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^30.0.3",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.8.3"
  }
}
